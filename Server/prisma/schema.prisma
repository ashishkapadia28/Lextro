generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String
  createdAt DateTime @default(now())
  queries   Query[]
}

model Query {
  id                  String   @id @default(cuid())
  userId              String
  problemTitle        String
  difficulty          String?
  explanation         String?
  language            String
  createdAt           DateTime @default(now())
  answerType          String
  explanationLanguage String
  user                User     @relation(fields: [userId], references: [id])
}
