{
  "manifest_version": 3,
  "name": "Lextro for LeetCode",
  "version": "1.0.0",
  "description": "AI-powered assistant for LeetCode problems",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Lextro for LeetCode"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "tabs",
    "cookies",
    "webRequest"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://leetcode.com/*",
    "https://www.leetcode.com/*",
    "https://*.clerk.accounts.dev/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src http://localhost:3000 https://*.clerk.accounts.dev https://leetcode.com https://www.leetcode.com;"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidepanel.html",
        "sidepanel.js",
        "styles.css",
        "Logo_light_bg.png",
        "Logo_dark_bg.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*",
        "https://www.leetcode.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start",
      "all_frames": false,
      "match_about_blank": false
    }
  ]
}
